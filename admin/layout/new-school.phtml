<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">New School</h3>
	</div>
	<div class="card-body">
		<form id="school" class="needs-validation" novalidate="">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">School Name</label>
						<input type="text" required name="name" class="form-control" placeholder="Enter School Name eg Laroo Seed School">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">Registration Number</label>
						<input type="text" required name="reg_no" class="form-control" placeholder="Enter School Registration Number eg U1148">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">School Email</label>
						<input type="email" required name="email" class="form-control" placeholder="Enter Email Address eg laroo@ac.ug">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label">Address</label>
						<input type="text" required name="address" class="form-control" placeholder="Enter Address eg Gulu">
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group">
						<label class="form-label"></label>
						<button type="submit" required class="btn btn-primary btn-block submit">Submit</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<script type="text/javascript">
	$('#school').on('submit',function(e){
		e.preventDefault();
		$.ajax({
			url: request()+'?f=schools&s=new',
			method: 'POST',
			contentType: false,
			processData: false,
			data: new FormData(this),
			beforeSend: function(){
				$('.submit').html('');
				$('.submit').addClass('disabled');
			},
			success : function(data){
				console.log(data);
				$('.submit').html('Submit');
				$('.submit').removeClass('disabled');
				if (data.status == 200) {
					iziToast.info({
					    title: 'Success',
					    message: data.message,
					    position: 'topRight'
					});
					setTimeout(function(){
						location.reload();
					},1000);
				}else{
					iziToast.error({
					    title: 'Error',
					    message: data.message,
					    position: 'topRight'
					});
				}
			}
		})
	});

	
</script>